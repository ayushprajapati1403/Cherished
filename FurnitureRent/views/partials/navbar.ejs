<header class="header active">
    <a href="/"><img class="logo" src="/images/logo2.png" alt="Company logo"></a>
    <nav class="navbar">
        <ul class="navbar-list">
            <li><a class="navbar-link" href="/">Home</a></li>
            <li><a class="navbar-link" href="/products">Collections</a></li>
            <% if (!currentUser) { %>
                <li><a class="navbar-link" href="/login">Login</a></li>
                <li><a class="navbar-link" href="/register">Register</a></li>
            <% } else { %>
                <li><a class="navbar-link" href="/cart">Cart</a></li>
                <li><a class="navbar-link" href="/logout">Logout</a></li>
            <% } %>
        </ul>
        <form action="/search" method="post">
            <div class="search">
                <input type="text" class="search-box" name="search_item" placeholder="Search...">
                <button class="search-btn"><ion-icon name="search-outline"></ion-icon></button>
            </div>
        </form>
    </nav>
    <div class="mobile-navbar-btn">
        <ion-icon name="menu-outline" class="mobile-nav-icon"></ion-icon>
        <ion-icon name="close-outline" class="mobile-nav-icon"></ion-icon>
    </div>
</header>