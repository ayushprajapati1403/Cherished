    <div class="all-products">
        <div class="container">
            <% randomProducts.forEach(product => { %>
                <a href="/products/<%= product._id %>">
                    <div class="product">
                        <div class="part-7">
                            <div class="image">
                                <img src="<%= product.images.length > 0 ? product.images[0].url : '/images/default.jpg' %>" alt="<%= product.title %>">
                            </div>
                        </div>
                        <div class="part-8">
                            <h2><%= product.title %></h2>
                            <div class="star">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
